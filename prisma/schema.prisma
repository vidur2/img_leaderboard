generator generator {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://vidurmodgil:vidur@localhost:5432/imgDb"
}

model User {
  username String   @id @unique
  password String
  role     Role
  images   Images[]
}

model Images {
  id           Int        @id @unique @default(autoincrement())
  data         String
  rectangles   String[]
  userUsername String?
  state        LabelState
  user         User?      @relation(fields: [userUsername], references: [username])
}

enum LabelState {
  InProgress
  UnderReview
  ReviewStarted
  Done
  NotStarted
}

enum Role {
  Labeller
  Admin
}
